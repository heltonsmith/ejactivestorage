<p id="notice"><%= notice %></p>

<h1>Products</h1>
<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>Description</th>
      <th>Stock</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td>
          <h4>Primera imagen</h4>
          <%= image_tag product.images.first.variant(resize_to_limit: [100, 100])%>

          <h4>Última imagen</h4>
          <%= image_tag product.images.last.variant(resize_to_limit: [100, 100])%>

          <h4>Todas las imágenes con variant</h4>
          <% product.images.count.times do |i| %>
            <%= image_tag product.images[i].variant(resize_to_limit: [100, 100])%>
          <% end %>

          <h4>Todas las imágenes con representation</h4>
          <% product.images.count.times do |i| %>
            <%= image_tag product.images[i].representation(resize_to_limit: [100, 100])%>
          <% end %>

          <h4>URL Imágenes</h4>
          <% product.images.count.times do |i| %>
            <%= link_to product.images[i].filename, product.images[i].representation(resize_to_limit: [100, 100]).processed.url %> <br>
          <% end %>



        </td>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.stock %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: {confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New Product', new_product_path %>